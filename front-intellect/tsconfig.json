{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "checkJs": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/**/**/*.ts",
    "src/**/**/**/*.test.ts",
    "src/**/**/**/**/*.test.ts",
    "src/**/**/*.test.ts",
    "src/**/**/**/**/**/*.test.ts",
    "src/**/*.test.ts",
    "src/**/**/*.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }],
  "vetur.validation.script": false
}
