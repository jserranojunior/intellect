{
  "compilerOptions": {
    "target": "esnext",
    "checkJs": false,
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/**/**/*.ts",
    "src/**/**/**/*.test.ts",
    "src/**/**/**/**/*.test.ts",
    "src/**/**/*.test.ts",
    "src/**/**/**/**/**/*.test.ts",
    "src/**/*.test.ts",
    "src/**/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/**/*.test.ts",
    "**/*.test.ts",
    "*.test.ts",
    "**/**/**/*.test.ts",
    "**/**/**/**/*.test.ts",
    "**/**/**/**/**/**/*.test.ts",
    "**/**/**/**/**/**/**/*.test.ts",
    "node_modules",

    "./node_modules"
  ],
  "references": [{ "path": "./tsconfig.node.json" }],
  "checkJs": false,
  "vetur.validation.script": false
}
