{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach Ts",
      "protocol": "inspector",
      "port": 9229,
      "address": "0.0.0.0",
      "sourceMaps": true,
      "timeout": 10000,
      "skipFiles": [
        "${workspaceFolder}/backend/node_modules/**/*.js",
        "<node_internals>/**/*.js",
        "${workspaceFolder}/backend/<node_internals>/**/*.js",
        "<node_internals>"
      ],
      "localRoot": "${workspaceFolder}/backend",
      "remoteRoot": "/app",
      "restart": true
    },
    {
      "name": "Debug index.ts",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/backend",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceRoot}/backend/src/server.ts"],
      "skipFiles": [
        "${workspaceFolder}/backend/node_modules/**/*.js",
        "<node_internals>/**/*.js",
        "${workspaceFolder}/backend/<node_internals>/**/*.js",
        "<node_internals>"
      ]
    }
  ]
}
